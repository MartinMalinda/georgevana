<h1>Todos for today:</h1>

<a href="/todo/AddToDo">Add ToDo</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>URGENT</th>
            <th>DONE</th>
        </tr>
    </thead>
    
    @foreach (var todo in Model)
    {
        <tr>
            <td>@todo.Id</td>
            <td>@todo.Title</td>
            <td>@todo.IsUrgent</td>
            <td>@todo.IsDone</td>
            <td>@Html.ActionLink("Remove", "RemoveToDo", "todo", new { id = todo.Id })</td>
        </tr>
    }
</table>
<a href="/todo/?isActive=true">Show active tasks</a>